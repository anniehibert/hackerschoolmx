<%= form_for @applicant, role: 'form' do |f| %>

  <div class="form-group">
    <%= f.label :full_name %>
    <%= f.text_field :full_name, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :skype %>
    <%= f.text_field :skype, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :twitter %>
    <%= f.text_field :twitter, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :birthdate %>
    <%= f.date_field :birthdate, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :current_location %>
    <%= f.text_field :current_location, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :schooling_info %>
    <%= f.text_area :schooling_info, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :reference %>
    <%= f.text_area :reference, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :why_us %>
    <%= f.text_area :why_us, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :archive_through_hs %>
    <%= f.text_area :archive_through_hs, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :previous_projects %>
    <%= f.text_area :previous_projects, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :previous_tools %>
    <%= f.text_area :previous_tools, class: 'form-control', required: true %>
  </div>

  <div class="form-group">
    <%= f.label :most_admired_project %>
    <%= f.text_area :most_admired_project, class: 'form-control', required: true %>
  </div>

  <div class="actions">
    <%= f.submit 'Aplicar ahora', class: 'btn btn-primary' %>
  </div>
<% end %>
